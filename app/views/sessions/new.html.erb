<div class="container">
<h1 style="color: #501B1D; text-align:center">Log in:</h1>
<div style="color: #83677B; text-align:center">
<% if  @error   %>
<h3> <%= @error %> </h3>
<% end %>
<%= form_tag('/login', method: :post) do %>
  <div>
    <%= label_tag(:username, "Username") %>
    <%= text_field_tag :username %>
  </div>
  <div>
   <%= label_tag(:password, "Password") %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag("Login") %>
<% end %>
</div>
</div>